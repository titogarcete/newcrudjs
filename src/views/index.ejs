<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Temas</title>
</head>
<body>
    <h1>Lista de Temas</h1>

    <form action="/topics" method="POST">
        <label for="title">Agregar un nuevo tema:</label>
        <input type="text" id="title" name="title" required>
        <button type="submit">Agregar</button>
    </form>

    <hr>

    <% if (topics.length > 0) { %>
        <% topics.forEach(topic => { %>
            <div>
                <h3><%= topic.title %></h3>
                <p>Votos: <%= topic.votes %></p>
                <!-- Botón para votar -->
                <form action="/topics/<%= topic.id %>/votes" method="POST" style="display: inline;">
                    <button type="submit">Votar</button>
                </form>
                <!-- Botón para editar -->
                <form action="/topics/<%= topic.id %>/edit" method="GET" style="display: inline;">
                    <button type="submit">Editar</button>
                </form>
                <!-- Botón para eliminar -->
                <form action="/topics/<%= topic.id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </div>
            <hr>
        <% }); %>
    <% } else { %>
        <p>No hay temas disponibles. Agrega uno nuevo.</p>
    <% } %>

</body>
</html>
